  <label><strong>Hide alerts:</strong> <input type="checkbox" name="dont_show_alerts" value="on"' . @$selected_dont_show_alerts . '></label>
<script>
  document.getElementById("view_form").addEventListener("submit", function (e) {
    const checkbox = document.querySelector("input[name=dont_show_alerts]");
    if (!checkbox.checked) {
      const hiddenInput = document.createElement("input");
      hiddenInput.type = "hidden";
